<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="220dip"
    android:layout_height="fill_parent"
    >
<TextView 
    android:text="@string/reason_first_login_instruction" 
    android:layout_width="200dip" 
    android:textColor="#D0A0A0"
    android:layout_height="wrap_content"
    android:id="@+id/textAccSetText1"
    />
<TextView  
    android:id="@+id/textAccSetText2"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/text_user_mobileno"
    android:layout_below="@+id/textAccSetText1"
    android:layout_alignLeft="@+id/editAcc"
    />
<EditText 
    android:id="@+id/editAcc" 
    android:layout_below="@+id/textAccSetText2"
    android:text=""
    android:layout_height="50dip" 
    android:layout_width="200dip" 
    android:layout_centerHorizontal="true"
    android:inputType="number"/>
<TextView 
    android:text="@string/text_user_password" 
    android:id="@+id/textAccSetText3" 
    android:layout_below="@+id/editAcc"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/editAccPasswd"
    />
<EditText 
    android:id="@+id/editAccPasswd" 
    android:layout_below="@+id/textAccSetText3"
    android:text=""
    android:layout_height="50dip" 
    android:layout_width="200dip" 
    android:layout_centerHorizontal="true"
    android:inputType="textPassword"/>
<Button 
    android:text="@string/button_login_text" 
    android:id="@+id/btnConfirmAccountSetting" 
    android:layout_below="@+id/editAccPasswd" 
    android:layout_width="100dip" 
    android:layout_height="50dip"
    android:layout_centerHorizontal="true"
    />
<!-- <Button 
    android:text="@string/button_cancel_text" 
    android:id="@+id/btnCancelAccountSetting" 
    android:layout_below="@+id/editAccPasswd" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/btnConfirmAccountSetting"
    /> -->
</RelativeLayout>
