<?xml version="1.0" encoding="utf-8"?> 
    <RelativeLayout        
        android:id="@+id/relativeLayoutContactListItem"        
        android:layout_width="fill_parent"        
        xmlns:android="http://schemas.android.com/apk/res/android"        
        android:layout_height="wrap_content"        
        android:paddingLeft="3dip"      
        android:paddingRight="3dip"> 
        <ImageView        
            android:paddingRight="3dip"    
            android:layout_alignParentLeft="true"      
            android:layout_width="48dip"        
            android:layout_height="48dip"        
            android:id="@+id/contactListItemIcon"      
            />    
        <TextView        
            android:text="Contact Name"        
            android:layout_height="wrap_content"        
            android:textSize="16dip"     
            android:textColor="#000000"   
            android:layout_width="fill_parent"    
            android:layout_toRightOf="@+id/contactListItemIcon"    
            android:id="@+id/contactListItemName"      
            /> 
        <TextView        
            android:text="Mobile Number"
            android:textColor="#000000"
            android:textSize="12dip"    
            android:textStyle="italic"    
            android:layout_height="wrap_content"        
            android:layout_width="fill_parent"        
            android:layout_below="@+id/contactListItemName"  
            android:layout_toRightOf="@+id/contactListItemIcon"        
            android:id="@+id/contactListItemNumber"      
            /> 
 </RelativeLayout>  