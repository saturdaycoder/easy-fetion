<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="240dip"
    android:layout_height="320dip"
    >
<ListView 
    android:layout_height="fill_parent"
    android:id="@+id/lvMsgList" 
    android:layout_width="320dip"
    android:choiceMode="none" android:clickable="false"
    android:stackFromBottom="true"
    android:transcriptMode="alwaysScroll"
    android:layout_above="@+id/editMsgText" 
    android:layout_alignParentTop="true"
 	android:paddingBottom="4dip" 
    android:background="@drawable/grey"
    android:layout_marginBottom="4dip" android:dividerHeight="0dip" android:animationCache="false"/>
<EditText 
    android:id="@+id/editMsgText" 
    android:text=""
    android:layout_height="wrap_content" 
    android:layout_width="156dip" 
    android:layout_marginLeft="4dip"
    android:layout_alignParentBottom="true"
    android:paddingTop="12dip" 
    android:inputType="textMultiLine"/>
<Button 
    android:text="@string/button_send_text" 
    android:id="@+id/btnSendMsg" 
    android:layout_width="80dip" 
    android:layout_height="50dip"
    android:layout_toRightOf="@+id/editMsgText"
    android:layout_alignTop="@+id/editMsgText"
    />    
</RelativeLayout>
